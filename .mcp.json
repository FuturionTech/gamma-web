{
  "mcpServers": {
    "cloudinary-asset-mgmt": {
      "command": "npx",
      "args": ["-y", "--package", "@cloudinary/asset-management", "--", "mcp", "start"],
      "env": {
        "CLOUDINARY_CLOUD_NAME": "${CLOUDINARY_CLOUD_NAME}",
        "CLOUDINARY_API_KEY": "${CLOUDINARY_API_KEY}",
        "CLOUDINARY_API_SECRET": "${CLOUDINARY_API_SECRET}"
      }
    },
    "stability-ai": {
      "command": "npx",
      "args": [
        "-y",
        "mcp-server-stability-ai"
      ],
      "env": {
        "STABILITY_AI_API_KEY": "${STABILITY_AI_API_KEY}"
      }
    },
    "recraft": {
      "command": "npx",
      "args": [
        "-y",
        "@recraft-ai/mcp-recraft-server@latest"
      ],
      "env": {
        "RECRAFT_API_KEY": "${RECRAFT_API_KEY}",
        "IMAGE_STORAGE_DIRECTORY": "storage/app/recraft",
        "RECRAFT_REMOTE_RESULTS_STORAGE": "1"
      }
    },
    "openai-gpt-image": {
      "command": "npx",
      "args": ["openai-gpt-image-mcp-199bio"],
      "env": { 
        "OPENAI_API_KEY": "${OPENAI_API_KEY}"
      }
    },
    "mcp-graphql": {
      "command": "npx",
      "args": [
        "mcp-graphql"
      ],
      "env": {
        "ENDPOINT": "http://api.muse.test/graphql",
        "ALLOW_MUTATIONS": "true"
      }
    },
    "browsermcp": {
      "command": "npx",
      "args": ["@browsermcp/mcp@latest"]
    }
  }
}